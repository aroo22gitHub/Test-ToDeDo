<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".DeveloperActivity">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="16dp">

            <!-- Developer Info Title -->
            <TextView
                android:id="@+id/developerInfoTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Developer Info"
                android:textColor="#000000"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp" />

            <!-- Developer Image -->
            <ImageView
                android:id="@+id/developerImage"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/me"
                android:scaleType="centerCrop"
                android:background="@drawable/circle_background"
                android:layout_marginBottom="16dp" />

            <!-- Developer Name -->
            <TextView
                android:id="@+id/developerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thakshila Rathnayake"
                android:textColor="#AB78F9"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_marginBottom="24dp"
                android:shadowColor="#FF88D1"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="6" />

            <!-- Developer Info Container -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#F5D6FC"
                android:padding="16dp"
                android:elevation="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp">

                <!-- Student Name -->
                <TextView
                    android:id="@+id/studentNameLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Student Name"
                    android:textColor="#800080"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/studentName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="N.T.A.Rathnayake"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:layout_marginBottom="16dp" />

                <!-- Student Number -->
                <TextView
                    android:id="@+id/studentNumberLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Student Number"
                    android:textColor="#800080"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/studentNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2021T01236"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:layout_marginBottom="16dp" />

                <!-- Personal Statement -->
                <TextView
                    android:id="@+id/personalStatementLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Personal Statement"
                    android:textColor="#800080"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/personalStatement"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="“ToDeDo app; Your productivity companion. Simplify tasks, achieve goals effortlessly.”"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:layout_marginBottom="16dp" />

                <!-- Release Version -->
                <TextView
                    android:id="@+id/releaseVersionLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Release Version"
                    android:textColor="#800080"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/releaseVersion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.1"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:layout_marginBottom="16dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#961ECC"
        app:menu="@menu/bottom_nav_menu"
        app:itemIconTint="#FFFFFF"
        app:itemTextColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>



